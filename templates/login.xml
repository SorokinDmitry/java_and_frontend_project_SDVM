<fest:template xmlns:fest="http://fest.mail.ru">

	<div class="login">
		<div class="login__title"></div>
		<div class="login__form">
			<form name="loginForm" method="post">
				<p><input name="loginField" type="text" placeholder="Email" maxlength="255"> </input></p>
				<p><input name="passField" type="password" placeholder="Password" maxlength="255"> </input></p>
				<p><input class="submitButton" type="submit" value="Submit"></input></p>
			</form>
		</div>
		<a href="/#"> <button class="js-back"> Back </button></a>
	</div>
</fest:template>
